<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FASTTransitHub"
        tools:targetApi="31">
        <activity
            android:name=".Admin.RouteDataActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".Admin.StudentDataActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".Authentication.UserSignupActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".Authentication.UserLoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".User.DashboardActivity"
            android:exported="false">
        </activity>
        <activity
            android:name=".Admin.DashboardActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".User.BgService"
            android:enabled="true"
            android:exported="true" />
    </application>

</manifest>