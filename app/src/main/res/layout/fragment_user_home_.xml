<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.user_home_Fragment"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="262dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent"
        android:gravity="center"
        android:background="@drawable/home_border">



        <LinearLayout
            android:layout_width="218dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/user_rollno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Roll No"
                android:textColor="#0E7197"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/user_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Name"
                android:textColor="#0E7197"
                android:textSize="30sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/user_Route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Route No"
                android:textColor="#0E7197"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/user_rout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Time:"
                android:textColor="#0E7197"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <ImageView
            android:id="@+id/user_profileImage"
            android:layout_width="149dp"
            android:layout_height="119dp"
            android:background="@drawable/border"
            android:padding="10dp"
            app:srcCompat="@drawable/name_icon_focused"
            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Your QR"
        android:textColor="@color/white"
        android:background="@color/colorSecondary"
        android:shadowRadius="@integer/material_motion_duration_long_1"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/user_Qr"
        android:layout_width="345dp"
        android:layout_height="318dp"
        android:layout_margin="50dp"
        android:background="@drawable/home_border"
        app:srcCompat="@drawable/user_qr"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


</LinearLayout>